        <!-- android:name="android.intent.category.OPENABLE" /> -->
        <!-- <data android:mimeType="text/plain" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->
        <activity android:name=".FirmwareInfoActivity"></activity>
    </application>

</manifest>