<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightMedGray">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/checkLensTypeImageView"
        android:src="@drawable/ic_check_box_gray_unchecked_24dp"
        android:layout_alignParentStart="true"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"
        android:visibility="invisible"
        android:id="@+id/seriesCheckBoxCheckedLayout">

        <RelativeLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/white"
            android:layout_gravity="center">
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_green_checked_24dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:textColor="@color/darkBlue"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:text="Optimo"
        android:layout_toEndOf="@+id/checkLensTypeImageView"
        android:id="@+id/lensListType"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/lensTypeAddImageView"
        android:src="@drawable/ic_add_circle_24dp"
        android:layout_toStartOf="@+id/lensTypeImageView"
        android:focusable="false"
        android:paddingEnd="10dp"
        android:paddingStart="0dp"
        android:visibility="invisible"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_toStartOf="@+id/lensTypeImageView"
        android:paddingEnd="10dp"
        android:paddingStart="0dp"
        android:visibility="visible"
        android:id="@+id/lensTypeAddImageLayout">

        <RelativeLayout
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@color/white"
            android:layout_gravity="center">
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_24dp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/lensTypeImageView"
        android:paddingEnd="10dp"
        android:paddingStart="0dp"
        android:src="@drawable/ic_expand_more_white_24dp"
        android:layout_alignParentEnd="true"
        android:scaleX="1.3"
        android:scaleY="1.3" />
</RelativeLayout>