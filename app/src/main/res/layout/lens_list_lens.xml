<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lensListLensTextView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:text="24-290mm"
        android:textColor="@color/newRed"
        android:background="#EEEEEE"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_toEndOf="@+id/lensListLensTextView"
        android:id="@+id/lensListSerialTextView"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:text="111 ANA"
        android:textSize="16dp"
        android:textColor="#555555"
        android:background="#EEEEEE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_toEndOf="@+id/lensListSerialTextView"
        android:layout_toStartOf="@+id/editLensImageView"
        android:background="#EEEEEE"
        android:gravity="center_vertical|end"
        android:text="Cal: F I Z"
        android:textColor="#777777"
        android:textSize="14sp"
        android:paddingStart="0dp"
        android:paddingEnd="20dp"
        android:id="@+id/lensListStatusTextView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/editLensImageView"
        android:src="@drawable/ic_edit_24dp"
        android:layout_alignParentEnd="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:background="#EEEEEE" />
</RelativeLayout>