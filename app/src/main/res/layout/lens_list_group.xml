<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lensListGroupLayout"
    android:background="@color/darkBlue">

    <ImageView
        android:id="@+id/checkLensManufacturerImageView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_check_box_white_unchecked_24dp" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:visibility="invisible"
        android:id="@+id/manufacturerCheckBoxCheckedLayout">

        <RelativeLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@color/white"
            android:layout_gravity="center">
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_green_checked_24dp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!--<CheckBox-->
        <!--android:id="@+id/lensManufacturerCheckBox"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:paddingEnd="0dp"-->
        <!--android:paddingStart="40dp" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Angenieux"
        android:gravity="center_vertical"
        android:id="@+id/lensListHeader"
        android:layout_toEndOf="@+id/checkLensManufacturerImageView"
        android:layout_toStartOf="@+id/lensHeaderCountTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="16"
        android:gravity="center_vertical|end"
        android:id="@+id/lensHeaderCountTextView"
        android:layout_toStartOf="@id/lensHeaderImageView"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/lensHeaderImageView"
        android:src="@drawable/ic_expand_more_white_24dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_alignParentEnd="true"
        android:paddingStart="0dp"
        android:paddingEnd="10dp" />
</RelativeLayout>