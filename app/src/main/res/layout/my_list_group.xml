<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkGray"
    android:id="@+id/MyListGroupLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/myListHeaderImageView"
        android:src="@drawable/ic_expand_more_white_24dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:paddingEnd="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/altWhite"
        android:text="My List A"
        android:gravity="center_vertical"
        android:id="@+id/myListHeader"
        android:layout_toEndOf="@+id/myListHeaderImageView" />
        <!--android:layout_toStartOfindex@+id/myListHeaderCountTextView"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:textColor="@color/lightestGray"
        android:text="15"
        android:gravity="center_vertical|end"
        android:id="@+id/myListHeaderCountTextView"
        android:layout_toEndOf="@+id/myListHeader"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="0dp"/>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:id="@+id/myListAddLensImageViewLayout">

        <ImageView
            android:id="@+id/myListAddLensImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_edit_24dp" />
    </LinearLayout>


</RelativeLayout>